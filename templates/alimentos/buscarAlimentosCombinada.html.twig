{% extends 'alimentos/layout.html.twig' %}

{% block contenido %}

	<form name="formBusqueda" action="{{ path('app_alimentos_buscarAlimentosCombinada') }}" method="POST">
		<table>
			<tr>
				<td>energía del alimento:</td>
				<td><input type="text" name="energia" value="{{ energia }}">(introducir únicamente números positivos)</td>
			</tr>
			<tr>
				<td>nombre del alimento:</td>
				<td><input type="text" name="nombre" value="{{ nombre }}"></td>
			</tr>
			<tr>
				<td><input type="submit" value="buscar"></td>
			</tr>
		</table>
	</form>

	{% if resultado %}
		{% include 'alimentos/tablaAlimentos.html.twig' with {'alimentos': resultado} %}
	{% else %}
		<b>
			<span style="color: red;">{{ mensaje }}
			</span>
		</b>
	{% endif %}
{% endblock %}
